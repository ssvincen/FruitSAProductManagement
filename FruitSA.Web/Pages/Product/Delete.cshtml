@page
@model FruitSA.Web.Pages.Product.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <h1>Delete Product</h1>

    <h3>Are you sure you want to delete this product?</h3>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Product.Description</dd>

        <dt class="col-sm-2">Product Code</dt>
        <dd class="col-sm-10">@Model.Product.ProductCode</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Product.CategoryName</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.ProductId" />
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>